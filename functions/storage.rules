rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Knowledge Base files - allow authenticated users to read
    match /knowledge/{allPaths=**} {
      allow read: if request.auth != null;
      // Write is handled via Firebase Console only
    }

    // User uploaded images (chat/diagnosis) - allow authenticated users to manage their own images
    // Images are stored permanently for future model training purposes
    match /user_images/{userId}/{allPaths=**} {
      // Users can only read/write their own images
      allow read: if request.auth != null && request.auth.uid == userId;
      // Write allowed with size limit (~1MB for training-quality retention)
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 1 * 1024 * 1024;
    }

    // Deny everything else by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

